---
interface Props {
	title?: string;
}

const { title } = Astro.props;

---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: #121212;
		color: white;
	}
</style>
<style is:global>
	@font-face {
		font-family: inter;
		src: url('../../public/fonts/Inter-VariableFont_opsz,wght.ttf.ttf')
	}
* {
	font-family: inter;
}
</style>
